{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:backend": "npx convex dev",
    "dev:setup": "bash -c 'npx convex dev & npm run dev'",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "lint:fix": "eslint --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:xendit": "bash scripts/test-xendit.sh",
    "test:resend": "bash scripts/test-resend.sh",
    "test:integrations": "bash scripts/test-xendit.sh && bash scripts/test-resend.sh"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.35.5",
    "@openrouter/ai-sdk-provider": "^1.2.8",
    "ai": "^5.0.104",
    "clsx": "^2.1.1",
    "convex": "^1.29.3",
    "lucide-react": "^0.462.0",
    "next": "16.0.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-grab": "^0.0.54",
    "resend": "^6.5.2",
    "sanitize-html": "^2.13.0",
    "tailwind-merge": "^3.4.0",
    "xendit-node": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2",
    "baseline-browser-mapping": "^2.8.32",
    "eslint": "^9",
    "eslint-config-next": "16.0.5",
    "husky": "^9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15",
    "prettier": "^3",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
