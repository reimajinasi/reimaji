GITHUB_OWNER=reimajinasi
GITHUB_REPO=reimaji
GITHUB_EMAIL=reimajinasi@gmail.com

# ================================
# Development Configuration
# ================================
# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Reimaji AI Literacy Platform"

# Development Settings
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=development

# ================================
# AI Configuration
