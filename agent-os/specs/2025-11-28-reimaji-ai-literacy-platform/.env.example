# ================================
# Payment Processing (Xendit)
# ================================
# Get from: knowledge-base/env.txt
XENDIT_SECRET_KEY=xnd_development_your_secret_key_here
XENDIT_PUBLIC_KEY=xnd_public_development_your_public_key_here

# ================================
# Alternative Payment (Midtrans)
# ================================
# Get from: knowledge-base/env.txt
MIDTRANS_MERCHANT_ID=G229020711
MIDTRANS_CLIENT_KEY=Mid-client-your_client_key_here
MIDTRANS_SERVER_KEY=Mid-server-your_server_key_here

# ================================
# Email Service (Resend)
# ================================
# Get from: knowledge-base/env.txt
RESEND_API_KEY=re_your_api_key_here

# ================================
# Database (Convex)
# ================================
# These will be provided during Convex setup
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOYMENT=your-project-name

# ================================
# Deployment (Vercel)
# ================================
# Get from: knowledge-base/env.txt
VERCEL_TOKEN=your_vercel_token_here

# ================================
# Repository Management (GitHub)
# ================================
# Get from: knowledge-base/env.txt
GITHUB_FINE_GRAINED_TOKEN=github_pat_your_token_here
GITHUB_CLASSIC_TOKEN=ghp_your_token_here
